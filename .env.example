# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# cTrader API Configuration
CTRADER_ACCOUNT_ID=your_account_id_here
CTRADER_API_KEY=your_api_key_here
CTRADER_CLIENT_ID=your_client_id_here
CTRADER_SERVER=real  # or 'demo' for testing

# Forex Trading Parameters
BASE_CURRENCY=EUR
QUOTE_CURRENCY=USD
TRADING_PAIRS=EURUSD,GBPUSD,USDJPY

# Risk Management
MAX_RISK_PERCENT=2.0
POSITION_SIZE=1.0
STOP_LOSS_PIPS=50
TAKE_PROFIT_PIPS=100

# Filtering & Indicators
EMA_PERIOD_SHORT=12
EMA_PERIOD_LONG=26
MACM_PERIOD=9
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# AI/ML Configuration (optional)
AI_MODEL_ENDPOINT=http://localhost:8000
AI_MODEL_NAME=forex_predictor

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=matrixcbot
DB_USER=user
DB_PASSWORD=password

# Logging
LOG_LEVEL=INFO
LOG_FILE=matrixcbot.log

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
